{
  "name": "countdown-timer",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --ssl --ssl-key ssl/server.key --ssl-cert ssl/server.crt",
    "build": "ng build",
    "build-web-prod": "ng build --prod --output-path=\".dist/web\" --base-href ./",
    "build-all": "npm run build-web-prod && npm run build-desktop && npm run zip-desktop",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-web-with-desktop-env": "ng build --configuration=desktop --output-path=\".temp/web\" --base-href ./",
    "prepare-desktop": "mkdirp ./.temp/desktop && ncp buildAssets/desktop .temp/desktop/ && ncp .temp/web .temp/desktop/ && rimraf .dist/desktop/",
    "build-desktop": "npm run build-web-with-desktop-env && npm run prepare-desktop && electron-packager .temp/desktop/ --electronVersion=2.0.0 --platform=win32,linux --out=./.dist/desktop/",
    "zip-desktop": "electron-installer-zip .dist/desktop/talktimer-win32-x64 .dist/desktop/talktimer-win32-x64.zip"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.6",
    "@angular/common": "^6.0.6",
    "@angular/compiler": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/forms": "^6.0.6",
    "@angular/http": "^6.0.6",
    "@angular/platform-browser": "^6.0.6",
    "@angular/platform-browser-dynamic": "^6.0.6",
    "@angular/router": "^6.0.6",
    "@ngx-progressbar/core": "^5.0.1",
    "@nicky-lenaers/ngx-scroll-to": "^1.0.0",
    "angular-auth-oidc-client": "^6.0.1",
    "boostrap": "^2.0.0",
    "bootstrap": "^4.1.1",
    "core-js": "^2.5.7",
    "electron-packager": "^12.1.0",
    "font-awesome": "^4.7.0",
    "ie-shim": "0.1.0",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.3.1",
    "moment": "^2.22.2",
    "ncp": "^2.0.0",
    "rxjs": "^6.2.1",
    "stickyfilljs": "^2.0.5",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.6",
    "@angular/language-service": "^6.0.6",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.3.4",
    "codelyzer": "~4.3.0",
    "electron-installer-zip": "^0.1.2",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.3",
    "karma-chrome-launcher": "~2.2.0",
    "typescript": "~2.7.2",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.1.0",
    "protractor": "~5.3.2",
    "ts-node": "~6.1.2",
    "tslint": "~5.10.0"
  }
}
